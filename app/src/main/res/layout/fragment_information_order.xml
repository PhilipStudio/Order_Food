<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_name_restaurant"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="@string/name_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_baseline_account_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_name_user"
                android:textColor="@android:color/black"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:text="Người tạo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_total"
            android:textColor="@android:color/black"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:textColor="@android:color/black"
        android:text="@string/payment_method"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_button_airpay"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_local_parking"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_button_payment"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="Ví AirPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radio_button_money"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_money"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_button_payment"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="Tiền mặt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <Button
        android:id="@+id/button_confirm_order"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button"
        android:textAllCaps="false"
        android:text="@string/content"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>