<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/what_kind_of_food_your_like"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/flow_layout"
        app:flChildSpacing="10dp"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="8dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:padding="12dp"
            android:background="@drawable/custom_text_view_selected"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburger"/>

        <TextView
            android:background="@drawable/custom_text_view_unselected"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza"/>

        <TextView
            android:background="@drawable/custom_text_view_unselected"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mỳ Spagetti"/>

        <TextView
            android:background="@drawable/custom_text_view_unselected"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phở Hà Nội"/>


        <TextView
            android:textColor="@android:color/black"
            android:background="@drawable/custom_text_view_selected"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cơm trộn Hàn Quốc"/>


        <TextView
            android:background="@drawable/custom_text_view_unselected"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bánh ngọt"/>

        <TextView
            android:background="@drawable/custom_text_view_unselected"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sushi"/>

        <TextView
            android:background="@drawable/custom_text_view_unselected"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mỳ cay Hàn Quốc"/>
    </com.nex3z.flowlayout.FlowLayout>

    <Button
        android:id="@+id/button_continue"
        android:textColor="@android:color/white"
        android:text="@string/_continue"
        android:background="@drawable/custom_button"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</LinearLayout>